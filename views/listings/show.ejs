<% layout("/layout/boilerplate.ejs") %>
<body>
    <div class="row">
       

     <div class="col-4 offset-2">
    <div class="card show-card" >
        <h3><%= listing.title%>
    </h3>
        <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="image">
  <div class="card-body">
   
    <p class="card-text">
        <ul>
      
        <li><%= listing.description%></li>
        
        <li> &#8377;<%= (listing.price || 0).toLocaleString("en-IN") %>/per night</li>
        <li><%=listing.location%></li>
        <li><%=listing.country%></li>
    </ul>
    </p>
  
  </div>
    </div>
    
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary" id="edit">Edit</a>
    <br><br>
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE"> <button class="btn btn-dark"> delete </button>

    </div>
        <hr>
    <div class="col-6 offset-3">
        <h4>Leave a Review</h4>
         <form action="/listings/<%=listing._id%>>/reviews">
            <div class="mb-2" "mt-2">
                <label for="rating" class="form-range">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-control">
            </div>
       <div class="mb-2" "mt-2">
         <label for="comments" class="form-label">comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows= "5" type="textarea" class="form-control"></textarea>
       </div>
       
       
            <button class=" btn btn-outline-dark mb-2 mt-2">submit</button>
        </form>

    </div>
</div>

    
    
</body>
