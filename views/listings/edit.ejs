<% layout("/layout/boilerplate.ejs") %>

    <body>
        <div class="row ">
            <div class="col-8 offset-2">

                <h3>edit the place</h3>
                <form method="post" action="/listings/<%= listing._id %>?_method=PUT"  class="needs-validation"  novalidate>
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input name="title" value="<%= listing.title  %>" type="text" required
                            class="form-control">
                             <div class="valid-feedback">Title looks good</div>
                             <div class="invalid-feedback">Title doesn't looks good</div>
                    </div>
                    <br><br>
                    <div>
                        <label for="description" class="form-label">description</label>
                        <textarea name="description" type="text"
                            class="form-control"  required><%= listing.description  %></textarea>
                             <div class="valid-feedback">description looks good</div>
                             <div class="invalid-feedback">description doesn't looks good</div>
                    </div>
                    <br><br>
                    <div>
                        <label for="image[url]" class="form-label">image</label>
                        <input name="image[url]" placeholder="enter the URL" type="text"
                            class="form-control">
                            <div class="valid-feedback">image looks good</div>
                             <div class="invalid-feedback">image doesn't looks good</div>
                    </div>
                    <br><br>
                    <div class="row">
                        <div class="col-4">
                            <div>
                                <label for="price" class="form-label">price</label>
                                <input name="price" value="<%= listing.price %>" type="number" class="form-control"  required>
                                 <div class="valid-feedback">price looks good</div>
                             <div class="invalid-feedback">price doesn't looks good</div>
                            </div>
                            <br><br>
                        </div>
                        <div class="col-4">
                            <div>
                                <label for="location" class="form-label">location</label>
                                <input name="location" value="<%= listing.location%> " type="text" class="form-control"  required>
                                 <div class="valid-feedback">location looks good</div>
                             <div class="invalid-feedback">location doesn't looks good</div>
                            </div>
                            <br><br>
                        </div>
                    </div>


                    <div>
                        <label for="country" class="form-label">country</label>
                        <input name="country" value="<%= listing.country%> " type="text" class="form-control"  required>
                         <div class="valid-feedback">country looks good</div>
                             <div class="invalid-feedback">country doesn't looks good</div>
                    </div>




                    <br><br>
                    <button id="edit-btn">Add</button>



                </form>



            </div>
        </div>
        <script src="/js/script.js"></script>
    </body>