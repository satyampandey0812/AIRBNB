<% layout("/layout/boilerplate.ejs") %>

  
    <h3>All Listings</h3>
    <!-- <form method="GET"  action="/listings/new"><button>create new place</button></form> -->

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
      <% for (let listing of allListing) { %>
  <div class="card col">
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="img" style="height: 20rem">
      <div class="card-body">
        <h5 class="card-title"><b><%= listing.title %></b></h5>
        <p class="card-text">
          &#8377;<%= (listing.price || 0).toLocaleString("en-IN") %>/per night
        </p>
      </div>
    </a>
  </div>
<% } %>
    </div>




